<div id="user_nav">
	<% if current_user %>
		<li><%= link_to image_tag(current_user.image, {height: '40px'}), current_user.url, target: '_blank' %>Welcome, <%= link_to current_user.nickname, current_user.url, target: '_blank' %>! <%= link_to 'Sign out', signout_path %></li>
	<% else %>
		<li><%= link_to 'Sign in with Picplz', '/auth/picplz' %></li>
	<% end %>
</div>
